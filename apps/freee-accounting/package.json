{
  "name": "freee-accounting-mcp",
  "version": "0.1.0",
  "description": "MCP Server for freee accounting API integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "freee-accounting-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && mkdir -p dist && npx tsc src/index.ts --outDir dist --declaration --declarationMap --sourceMap --module ESNext --target ES2022 --moduleResolution bundler",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "debug": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "debug:build": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "inspect:build": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "dependencies": {
    "@mcp-server/shared": "*",
    "@mcp-server/types": "*",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "convict": "^6.2.4",
    "dotenv": "^17.0.0",
    "inversify": "^7.5.4",
    "neverthrow": "^8.2.0",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ]
}
