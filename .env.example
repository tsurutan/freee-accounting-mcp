# freee API設定
# freee開発者コンソールで取得した認証情報を設定してください
# https://developer.freee.co.jp/

FREEE_CLIENT_ID=your_client_id_here
FREEE_CLIENT_SECRET=your_client_secret_here
FREEE_REDIRECT_URI=http://localhost:3000/callback
FREEE_API_BASE_URL=https://api.freee.co.jp

# デバッグ設定
DEBUG=true
LOG_LEVEL=debug
NODE_ENV=development

# セキュリティ設定（本番環境では必須）
# ENCRYPTION_KEY=your_32_character_encryption_key

# キャッシュ設定
# CACHE_TTL=300
# CACHE_MAX_SIZE=1000

# レート制限設定
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
# RATE_LIMIT_BURST_SIZE=10

# 監視設定
# METRICS_ENABLED=true
# HEALTH_CHECK_INTERVAL=30000

# ログ設定
# LOG_FILE_PATH=./logs/mcp-server.log
# LOG_MAX_FILES=5
# LOG_MAX_SIZE=10485760
